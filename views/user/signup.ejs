<h2>Sign Up</h2>


<% if (typeof signupErrorMsg != 'undefined' && signupErrorMsg) { %>
  <p class="alert"><%- signupErrorMsg %></p>
<% } %>

<form class="signup-form" action="/signup" method="post">
  <div class="input-group">
    <label for="email" class="signup-label">이메일</label>
    <input type="email" name="email" id="check-email">
  </div>

  <div class="input-group">
    <label for="nickname" class="signup-label">닉네임</label>
    <input type="text" name="nickname">
  </div>

  <div class="input-group">
    <label for="phone" class="signup-label">휴대폰 번호</label>
    <input type="text" name="phone" id="check-phone">
  </div>

  <div class="input-group">
    <label for="addr" class="signup-label">주소</label>
    <input type="text" name="zipcord" placeholder="우편번호" readonly> 
    <input type="text" name="addr_full" placeholder="주소를 검색하세요." readonly> 
    <button id="search-addr">검색</button><br>
    <input type="text" name="addr_detail">
  </div>

  <div class="input-group">
    <label for="password1" class="signup-label">비밀번호</label>
    <input type="password" name="password1" autocomplete="off">
  </div>
  
  <div class="input-group">
    <label for="password2" class="signup-label">비밀번호 확인</label>
    <input type="password" name="password2" autocomplete="off">
  </div>

  <input type="submit" value="완료">
</form>